<header id="top-header">
    <span class="siteName">
        <a href="/" title="Return to home page">CSE Motors</a>
    </span>
    <div id="tools">
        <% if (locals.loggedin) { %>
            <% const accountName = locals.accountData && locals.accountData.account_firstname ? locals.accountData.account_firstname : "Client" %>
            <a title="Manage your account" href="/account/">Welcome <%= accountName %></a>
            <a title="Click to log out" href="/account/logout">Logout</a>
        <% } else { %>
            <a title="Click to log in" href="/account/login">My Account</a>
        <% } %>
    </div>
</header>
