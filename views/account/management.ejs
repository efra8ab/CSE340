<% /* views/account/management.ejs */ %>
<div class="management-container">
  <h1><%= title %></h1>
  <%- messages() %>
  <% if (errors) { %>
    <ul class="notice">
      <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>
  <% const account = locals.accountData || {}; %>
  <% const firstName = account.account_firstname || "Client"; %>
  <h2>Welcome <%= firstName %></h2>
  <% if (account.account_id) { %>
    <p><a href="/account/update/<%= account.account_id %>">Update Account Information</a></p>
  <% } %>
  <% if (account.account_type === "Employee" || account.account_type === "Admin") { %>
    <h3>Inventory Management</h3>
    <p><a href="/inv/">Manage Inventory</a></p>
  <% } %>
</div>
