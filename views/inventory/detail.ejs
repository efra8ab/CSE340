<section id="inv-detail" class="wrapper">
    <h1>
        <%= title %>
    </h1>
    <%- detail %>
    <% if (locals.loggedin) { %>
        <form class="favorite-form" action="/account/favorites" method="post">
            <input type="hidden" name="inv_id" value="<%= vehicle.inv_id %>">
            <input type="hidden" name="redirectTo" value="<%= redirectTo %>">
            <button type="submit">Save Vehicle</button>
        </form>
    <% } else { %>
        <p class="favorite-hint">Log in to save this vehicle for later.</p>
    <% } %>
</section>
