<section class="add-classification">
    <h1>Add Classification</h1>

    <!-- Flash messages -->
    <% if (locals && typeof messages==='function' ) { %>
        <%- messages() %>
            <% } %>

                <!-- Server-side validation errors -->
                <% if (typeof errors !=='undefined' && errors.errors && errors.errors.length) { %>
                    <div class="errors" role="alert" aria-live="polite">
                        <ul>
                            <% errors.errors.forEach(function(e){ %>
                                <li>
                                    <%= e.msg %>
                                </li>
                                <% }) %>
                        </ul>
                    </div>
                    <% } %>

                        <p class="hint">
                            Allowed: <strong>A–Z</strong> and <strong>0–9</strong>. <em>No spaces or special
                                characters</em>.
                        </p>

                        <form id="classificationForm" action="/inv/classification" method="post" novalidate>
                            <label for="classification_name">Classification Name</label>
                            <input id="classification_name" name="classification_name" type="text" required
                                minlength="3" maxlength="30" pattern="^[A-Za-z0-9]+$"
                                aria-describedby="classification_help"
                                value="<%= typeof classification_name !== 'undefined' ? classification_name : '' %>" />
                            <div id="classification_help" class="help">
                                Must be 3–30 characters, letters and numbers only, no spaces or special characters.
                            </div>

                            <button type="submit">Add Classification</button>
                        </form>
</section>

