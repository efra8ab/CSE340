<section class="add-inventory">
    <h1>Add Inventory</h1>

    <!-- Flash messages -->
    <% if (locals && typeof messages==='function' ) { %>
        <%- messages() %>
            <% } %>

                <!-- Server-side validation errors -->
                <% if (typeof errors !=='undefined' && errors.errors && errors.errors.length) { %>
                    <div class="errors" role="alert" aria-live="polite">
                        <ul>
                            <% errors.errors.forEach(function(e){ %>
                                <li>
                                    <%= e.msg %>
                                </li>
                                <% }) %>
                        </ul>
                    </div>
                    <% } %>

                        <form id="inventoryForm" action="/inv/inventory" method="post" novalidate>
                            <label for="classification_id">Classification</label>
                            <select id="classification_id" name="classification_id" required>
                                <option value="">-- Select Classification --</option>
                                <% (classifications || []).forEach(function(c){ %>
                                    <option value="<%= c.classification_id %>"
                                        <%=String(classification_id)===String(c.classification_id) ? 'selected' : '' %>>
                                        <%= c.classification_name %>
                                    </option>
                                    <% }) %>
                            </select>

                            <label for="inv_make">Make</label>
                            <input id="inv_make" name="inv_make" type="text" required minlength="2" maxlength="50"
                                value="<%= inv_make %>" />

                            <label for="inv_model">Model</label>
                            <input id="inv_model" name="inv_model" type="text" required minlength="1" maxlength="50"
                                value="<%= inv_model %>" />

                            <label for="inv_year">Year</label>
                            <input id="inv_year" name="inv_year" type="number" required min="1900"
                                max="<%= new Date().getFullYear()+1 %>" value="<%= inv_year %>" />

                            <label for="inv_description">Description</label>
                            <textarea id="inv_description" name="inv_description" required
                                minlength="8"><%= inv_description %></textarea>

                            <label for="inv_image">Image Path/URL</label>
                            <input id="inv_image" name="inv_image" type="text" required maxlength="255"
                                value="<%= inv_image %>" />

                            <label for="inv_thumbnail">Thumbnail Path/URL</label>
                            <input id="inv_thumbnail" name="inv_thumbnail" type="text" required maxlength="255"
                                value="<%= inv_thumbnail %>" />

                            <label for="inv_price">Price</label>
                            <input id="inv_price" name="inv_price" type="number" step="0.01" min="0" required
                                value="<%= inv_price %>" />

                            <label for="inv_miles">Miles</label>
                            <input id="inv_miles" name="inv_miles" type="number" step="1" min="0" required
                                value="<%= inv_miles %>" />

                            <label for="inv_color">Color</label>
                            <input id="inv_color" name="inv_color" type="text" required minlength="3" maxlength="50"
                                value="<%= inv_color %>" />

                            <button type="submit">Add Vehicle</button>
                        </form>
</section>